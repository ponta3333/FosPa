<div class="row">
	<h2><span class="underbar">イベント一覧</span></h2>
	<div class="col-xs-12 text-center">
		<div class="row">
			<% if @events.exists? %>
			<% @events.each do |event| %>
				<div class="col-xs-3">
					<%= link_to event_path(event) do %>
						<%= attachment_image_tag event, :image, format: 'jpeg', size:"200x200" %>
						<p><%= event.name %></p>
						<p><%= event.day.strftime("%Y/%m/%d") %></p>
						<p><%= event.prefecture %></p>
					<% end %>
				</div>
			<% end %>
			<% else %>
			<h3>投稿したイベントが表示されます</h3>
			<% end %>
		</div>
	</div>
</div>
<div class="row">
  <div class="col-xs-8 col-md-offset-2">
    <div class="text-center">
      <%= paginate @events %>
    </div>
  </div>
</div>

