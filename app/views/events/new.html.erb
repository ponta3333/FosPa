<div class="row">
  <div class="col-xs-12">
    <h2 class="title-left"><span class="underbar">イベント登録</span></h2>
  </div>
</div>
<%= form_for(@event) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <%= render 'events/event_form', f: f, event: @event %>
      <div class="row form-space">
        <div class="col-md-2 col-md-offset-5 col-xs-3 col-xs-offset-6">
          <%= f.submit "登録", class: "btn btn-info" %>
        </div>
      </div>
<% end %>