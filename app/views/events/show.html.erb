<div class="row relative">
  <div class="col-xs-4">
    <h2 class="title-left"><span class="underbar">イベント詳細</span></h2>
  </div>
  <div class="supply-link-position">
  	<% if current_supply_user == @event.supply_user %>
  		<%= link_to "編集", edit_event_path, class: "btn btn-default" %>
  		<%= link_to "削除", event_path(@event), method: :delete, class: "btn btn-danger", data: {confirm: "削除しますか？"} %>
  	<% end %>
  </div>
</div>
<div class="row index-space">
	<div class="col-xs-3 col-xs-offset-1">
		<%= attachment_image_tag @event, :image, format: 'jpeg', size: '250x250', fallback: "fospa_no_image.png" %>
	</div>
	<div class="col-xs-8">
		<table class="table table-striped table-bordered user-table">
			<tbody>
				<tr>
					<td class="category">イベント名</td>
					<td class="infomation"><%= @event.name %></td>
				</tr>
				<tr>
					<td class="category">開催日</td>
					<td class="infomation"><%= @event.day.strftime("%Y/%m/%d") %></td>
				</tr>
				<tr>
					<td class="category">開催場所</td>
					<td class="infomation"><%= @event.place %></td>
				</tr>
				<tr>
					<td class="category">イベント内容</td>
					<td class="infomation"><%= simple_format(@event.content) %></td>
				</tr>
				<tr>
					<td class="category">告知元</td>
					<td class="infomation">
						<%= @event.supply_user.name %> さん
						<% if current_demand_user %>
							<%= link_to "お問い合わせ", supply_user_chats_path(@event.supply_user_id), class: "btn btn-default" %>
						<% end %>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<% if current_supply_user %>
				<div class="col-xs-3 col-xs-offset-9">
					<%= link_to "一覧へ", events_path %>
					<span>
					| <%= link_to "戻る", :back %>
		  		</span>
		  	</div>
	  	<% else %>
				<div class="col-xs-1 col-xs-offset-10">
					<%= link_to "戻る", :back %>
	  		</div>
			<% end %>
	  </div>
	</div>
</div>
