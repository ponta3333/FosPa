<div class="row">
  <div class="col-xs-12">
    <h2 class="title-left"><span class="underbar">Sign up</span><span style="font-size:20px;"> (一般会員)</span></h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "demand_users/shared/error_messages", resource: resource %>
  <div class="row form-space">
    <div class="col-xs-3 col-xs-offset-3">
      <label class="control-label">名前</label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "里親太郎" %>
    </div>
    <div class="col-xs-3">
      <label class="control-label">フリガナ</label>
      <%= f.text_field :name_kana, autocomplete: "name_kana", class: "form-control", placeholder: "サトオヤタロウ" %>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-xs-4 col-xs-offset-3">
      <label class="control-label">ニックネーム</label>
      <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control", placeholder: "ヤタロウ" %>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-xs-4 col-xs-offset-3">
      <label class="control-label">メールアドレス</label>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "〇〇〇〇＠〇〇.〇〇" %>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-xs-3 col-xs-offset-3">
      <label class="control-label">郵便番号</label>
      <%= f.text_field :postal_code, autocomplete: "postal_code", id: "user_postal_code", class: "form-control", placeholder: "1234567" %>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-xs-6 col-xs-offset-3">
      <label class="control-label">住所</label>
      <%= f.text_field :address, autocomplete: "address", id: "user_address", class: "form-control", placeholder: "東京都千代田区霞ヶ関〇-〇-〇" %>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-xs-3 col-xs-offset-3">
      <label class="control-label">電話番号(ハイフンなし)</label>
      <%= f.text_field :phone, autocomplete: "phone", class: "form-control", placeholder: "12345678910" %>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-md-2 col-md-offset-3 col-xs-3 col-xs-offset-3">
      <label class="control-label">年齢</label>
      <%= f.select :age, DemandUser.ages.keys, autocomplete: "age", class: "form-control", prompt:"---選択して下さい---" %>
    </div>
    <div class="col-md-2 col-xs-3">
      <label class="control-label">職業</label>
      <%= f.select :job, DemandUser.jobs.keys, autocomplete: "job", class: "form-control", prompt:"---選択して下さい---" %>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-xs-9 col-xs-offset-3">
      <div class="row">
        <div class="col-md-4 col-xs-5">
          <label class="control-label">パスワード</label>
          <% if @minimum_password_length %>
          <em>(半角<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "●●●●●●" %>
        </div>
        <div class="col-md-4 col-xs-5">
          <label class="control-label">パスワード確認用</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "●●●●●●" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row form-space">
    <div class="col-xs-3 col-xs-offset-3">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<%= render "demand_users/shared/links" %>