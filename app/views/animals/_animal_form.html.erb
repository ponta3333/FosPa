<div class="row form-group">
  <div class="col-md-4 col-md-offset-1 col-xs-6">
    <label class="control-label">イメージ画像</label>
    <div>
      <%= attachment_image_tag animal, :image, format: 'jpeg', size:"300x300", fallback: "fospa_no_image.png", class: "image animal-image" %>
    </div>
    <%= f.attachment_field :image, autocomplete: "image_id", id:"image" %>
  </div>
  <div class="col-md-7 col-xs-6">
    <div class="row form-space">
      <div class="col-md-3 col-xs-5">
        <label class="control-label">名前</label>
        <%= f.text_field :name, class: "form-control", placeholder: "ポチ" %>
      </div>
    </div>
    <div class="row form-space">
      <div class="col-md-2 col-xs-4">
        <label class="control-label">性別</label>
        <%= f.select :sex, Animal.sexes.keys, {}, class: "form-control" %>
      </div>
      <div class="col-md-3 col-xs-6">
        <label class="control-label">年齢</label>
        <%= f.select :age, Animal.ages.keys, {}, class: "form-control" %>
      </div>
    </div>
    <div class="row form-space">
      <div class="col-xs-12">
        <label class="control-label">種類 <span class="explanation">(犬猫いずれかを選択,決定後に種類を選択)</span></label>
        <div class="row">
          <label class="col-md-2 col-xs-4"><input type="radio" name="genre_radio" value="1" checked="checked"> 犬</label>
          <label class="col-md-2 col-xs-4"><input type="radio" name="genre_radio" value="2"> 猫</label>
          <%= button_tag '決定', type: 'button', id:"kettei" %>
        </div>
      </div>
    </div>
    <div class="row form-space">
      <div class="col-md-5 col-xs-9">
        <div class="dog_select">
          <%= f.collection_select :dog_bleed_id, bleed_dog, :id, :name, {}, class: "form-control" %>
        </div>
        <div class="cat_select">
          <%= f.collection_select :cat_bleed_id, bleed_cat, :id, :name, {}, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row form-space">
      <div class="col-md-9 col-xs-11">
        <label class="control-label">紹介文</label>
        <%= f.text_area :content, class: "form-control", placeholder: "紹介文を入力", rows:5 %>
      </div>
    </div>
  </div>
</div>