<div class="row">
  <div class="col-xs-4">
    <h2><span class="underbar">会員編集</span></h2>
  </div>
</div>
<%= form_for(@supply_user, url: supply_user_path(current_supply_user)) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="row form-group">
    <div class="col-xs-4 col-xs-offset-1">
      <label class="control-label">イメージ画像</label><br />
      <div>
        <%= attachment_image_tag @supply_user, :image, format: 'jpeg', size:"300x300", fallback: "fospa_no_image.png", class: "image" %>
      </div>
      <%= f.attachment_field :image, autocomplete: "image_id", id:"image" %>
    </div>
    <div class="col-xs-7">
      <div class="row form-space">
        <div class="col-xs-9">
          <label class="control-label">名前または法人名</label><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "里親太郎" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-9">
          <label class="control-label">フリガナ</label><br />
          <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", class: "form-control", placeholder: "サトオヤタロウ" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-6">
          <label class="control-label">メールアドレス</label><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "〇〇〇〇＠〇〇.〇〇" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-6">
          <label class="control-label">郵便番号(ハイフンなし)</label><br />
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control", placeholder: "1234567" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-9">
          <label class="control-label">住所または所在地</label><br />
          <%= f.text_field :address, autocomplete: "address", class: "form-control", placeholder: "東京都千代田区霞ヶ関〇-〇-〇" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-6">
          <label class="control-label">電話番号(ハイフンなし)</label><br />
          <%= f.text_field :phone, autocomplete: "phone", class: "form-control", placeholder: "12345678910" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-12">
          <%= f.submit "編集完了", class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
<% end %>