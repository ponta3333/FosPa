<div class="row">
  <div class="col-xs-12">
    <h2 class="title-left"><span class="underbar">Sign up</span><span style="font-size:20px;"> (募集会員)</span></h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "supply_users/shared/error_messages", resource: resource %>
  <div class="row form-group">
    <div class="col-md-3 col-md-offset-1 col-xs-4">
      <label class="control-label">イメージ画像</label><br />
      <div>
        <%= attachment_image_tag @supply_user, :image, format: 'jpeg', size:"300x300", fallback: "fospa_no_image.png", class: "image" %>
      </div>
      <%= f.attachment_field :image, autocomplete: "image_id", id:"image" %>
    </div>
    <div class="col-md-7 col-md-offset-1 col-xs-6 col-xs-offset-2">
      <div class="row form-space">
        <div class="col-md-9 col-xs-11">
          <label class="control-label">名前または法人名</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "里親太郎" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-md-9 col-xs-11">
          <label class="control-label">フリガナ</label>
          <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", class: "form-control", placeholder: "サトオヤタロウ" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-md-6 col-xs-11">
          <label class="control-label">メールアドレス</label>
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "〇〇〇〇＠〇〇.〇〇" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-6">
          <label class="control-label">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autocomplete: "postal_code", id: "user_postal_code", class: "form-control", placeholder: "1234567" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-md-9 col-xs-11">
          <label class="control-label">住所または所在地</label>
          <%= f.text_field :address, autocomplete: "address", id: "user_address", class: "form-control", placeholder: "東京都千代田区霞ヶ関〇-〇-〇" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-6">
          <label class="control-label">電話番号(ハイフンなし)</label>
          <%= f.text_field :phone, autocomplete: "phone", class: "form-control", placeholder: "12345678910" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-md-4 col-xs-6">
          <label class="control-label">パスワード</label>
          <% if @minimum_password_length %>
          <em class="explanation">(半角<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "●●●●●●" %>
        </div>
        <div class="col-md-4 col-xs-6">
          <label class="control-label">パスワード確認用</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "●●●●●●" %>
        </div>
      </div>
      <div class="row form-space">
        <div class="col-xs-12">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "supply_users/shared/links" %>
