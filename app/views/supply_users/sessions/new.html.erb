<div class="row">
  <div class="col-xs-12">
    <h2 class="title-left"><span class="underbar">Log in</span><span style="font-size:20px;"> (募集会員)</span></h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="row form-space">
      <div class="col-xs-4 col-xs-offset-4">
        <label class="control-label">メールアドレス</label><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "〇〇〇〇＠〇〇.〇〇" %>
      </div>
    </div>

    <div class="row form-space">
          <div class="col-xs-4 col-xs-offset-4">
            <label class="control-label">パスワード</label><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "●●●●●●" %>
          </div>
        </div>
    <% if devise_mapping.rememberable? %>
      <div class="col-xs-4 col-xs-offset-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="row form-space">
      <div class="col-xs-4 col-xs-offset-4">
        <%= f.submit "ログイン", class: "btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "supply_users/shared/links" %>
