<div class="row relative">
  <div class="col-xs-4">
    <h2><span class="underbar">会員情報</span></h2>
  </div>
  <div class="supply-link-position">
  	<%= link_to "編集", supply_users_supply_users_edit_path, class: "btn btn-default" %>
  </div>
</div>
<div class="row">
	<div class="col-xs-3 col-xs-offset-1">
		<%= attachment_image_tag current_supply_user, :image, format: 'jpeg', size: '250x250', fallback: "fospa_no_image.png" %>
	</div>
	<div class="col-xs-8">
		<table class="table table-striped table-bordered user-table">
			<tbody>
				<tr>
					<td>氏名または法人名</td>
					<td><%= current_supply_user.name %></td>
				</tr>
				<tr>
					<td class="category">氏名または法人名(フリガナ)</td>
					<td class="infomation"><%= current_supply_user.name_kana %></td>
				</tr>
				<tr>
					<td class="category">メールアドレス</td>
					<td class="infomation"><%= current_supply_user.email %></td>
				</tr>
				<tr>
					<td class="category">郵便番号</td>
					<td class="infomation"><%= current_supply_user.postal_code %></td>
				</tr>
				<tr>
					<td class="category">住所または所在地</td>
					<td class="infomation"><%= current_supply_user.address %></td>
				</tr>
				<tr>
					<td class="category">電話番号</td>
					<td class="infomation"><%= current_supply_user.phone %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>